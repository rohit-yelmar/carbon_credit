generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Record {
  id            String   @id
  project_name  String
  registry      String
  vintage       Int
  quantity      Int
  serial_number String   @unique
  created_at    DateTime @default(now())
  events        Event[]

  @@map("records")
}

model Event {
  id         String   @id @default(cuid())
  record_id  String
  event_type String
  timestamp  DateTime @default(now())
  record     Record   @relation(fields: [record_id], references: [id])

  @@unique([record_id, event_type])
  @@map("events")
}
